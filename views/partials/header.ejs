<head>
  <link rel="stylesheet" href="styles/index.css" />
</head>
<header
  class="fixed w-full z-50 glass-card glassmorphism"
  data-aos="fade-down"
  data-aos-duration="1000"
>
  <div class="container mx-auto px-6 py-4">
    <div class="flex items-center justify-between">
      <a href="/" class="flex items-center space-x-3">
        <img
          src="images/Logo-removebg-preview.png"
          alt="logo"
          class="w-12 h-12 rounded-xl"
        />
        <span
          class="text-2xl font-bold bg-clip-text text-transparent bg-gradient-to-r from-indigo-600 to-purple-600"
        >
          Study Hive
        </span>
      </a>

      <nav class="hidden md:flex items-center space-x-8">
        <a
          href="/"
          class="nav-link animated-font-gradient hover:text-indigo-600 transition-colors"
          >Home</a
        >
        <a
          href="/about"
          class="nav-link animated-font-gradient hover:text-indigo-600 transition-colors"
          >About</a
        >
        <a
          href="/contact"
          class="nav-link animated-font-gradient hover:text-indigo-600 transition-colors"
          >Contact</a
        >
        <a
          href="/features"
          class="nav-link animated-font-gradient hover:text-indigo-600 transition-colors"
          >Features</a
        >
        <div class="flex items-center space-x-4">
          <% if (!isAuthenticated) { %>
          <a
            href="/account"
            class="px-6 py-2 animated-bg-gradient text-white rounded-full hover-glow transition-all"
          >
            Sign Up / Login
          </a>
          <% } else { %>
          <a
            href="/dashboard"
            class="py-2 px-5 animated-bg-gradient text-white rounded-full hover-glow transition-all"
          >
            DashBoard
          </a>
          <% } %>
        </div>
      </nav>

      <button id="menuBtn" class="md:hidden text-gray-600 focus:outline-none">
        <svg
          class="w-6 h-6"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 6h16M4 12h16M4 18h16"
          />
        </svg>
      </button>
    </div>

    <nav id="mobileMenu" class="hidden md:hidden mt-4 pb-4">
      <div class="flex flex-col space-y-4">
        <a
          href="/"
          class="nav-link animated-font-gradient hover:text-indigo-600 transition-colors"
          >Home</a
        >
        <a
          href="/about"
          class="nav-link animated-font-gradient hover:text-indigo-600 transition-colors"
          >About</a
        >
        <a
          href="/contact"
          class="nav-link animated-font-gradient hover:text-indigo-600 transition-colors"
          >Contact</a
        >
        <a
          href="/features"
          class="nav-link animated-font-gradient hover:text-indigo-600 transition-colors"
          >Features</a
        >
        <% if (!isAuthenticated) { %>
        <a
          href="/account"
          class="px-6 py-2 animated-bg-gradient text-white rounded-full hover-glow transition-all"
        >
          Sign Up / Login
        </a>
        <% } else { %>
        <a
          href="/dashboard"
          class="py-2 px-5 animated-bg-gradient text-white rounded-full hover-glow transition-all"
        >
          DashBoard
        </a>
        <% } %>
      </div>
    </nav>
  </div>
</header>
