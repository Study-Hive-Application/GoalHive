<header
  class="text-gray-400 bg-white body-font"
  data-aos="fade-down"
  data-aos-duration="1000"
>
  <div class="container mx-50 flex flex-wrap p-3 items-center justify-between">
    <!-- Logo Section -->
    <a
      href="#"
      class="flex title-font font-medium items-center text-black mb-2 md:mb-0"
    >
      <img
        src="/images/Logo-removebg-preview.png"
        alt="logo"
        class="w-11 h-11"
      />
      <span class="ml-3 text-xl text-black">Study Hive</span>
    </a>

    <!-- Hamburger Icon (shown on small screens) -->
    <button
      class="md:hidden flex items-center text-black focus:outline-none ml-auto"
      onclick="toggleMenu()"
    >
      <svg
        class="w-6 h-6"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
        xmlns="http://www.w3.org/2000/svg"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M4 6h16M4 12h16M4 18h16"
        ></path>
      </svg>
    </button>
    <nav
      id="menu"
      class="hidden md:flex md:flex-grow md:items-center justify-center md:justify-end ml-62 text-base"
    >
      <a href="/" class="mr-5 text-black hover:text-gray-800 pr-2">Home</a>
      <a href="/about" class="mr-5 text-black hover:text-gray-800 pr-2"
        >About us</a
      >
      <a href="/contact" class="mr-5 text-black hover:text-gray-800 pr-2"
        >Contact us</a
      >
      <a href="/features" class="mr-5 text-black hover:text-gray-800 pr-2"
        >Features</a
      >
      <% if (!isAuthenticated) { %>
      <a href="/signup">
        <button
          class="inline-flex items-center bg-gray-800 border-0 py-1 px-3 focus:outline-none hover:bg-gray-700 rounded text-base mt-4 md:mt-0 text-white"
        >
          Register
          <svg
            fill="none"
            stroke="currentColor"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            class="w-4 h-4 ml-1"
            viewBox="0 0 24 24"
          >
            <path d="M5 12h14M12 5l7 7-7 7"></path>
          </svg>
        </button>
      </a>
      <% } else { %>
      <a href="/dashboard">
        <button
          class="inline-flex items-center bg-gray-800 border-0 py-1 px-3 focus:outline-none hover:bg-gray-700 rounded text-base mt-4 md:mt-0 text-white"
        >
          DashBoard
          <svg
            fill="none"
            stroke="currentColor"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            class="w-4 h-4 ml-1"
            viewBox="0 0 24 24"
          >
            <path d="M5 12h14M12 5l7 7-7 7"></path>
          </svg>
        </button>
      </a>
      <% } %>
    </nav>
  </div>
</header>
