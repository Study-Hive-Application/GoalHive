<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Profile</title>
    <link
      href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css"
      rel="stylesheet"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.css"
      rel="stylesheet"
    />
    <script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js"></script>
    <link rel="stylesheet" href="styles/profile.css" />
  </head>

  <body class="bg-gray-100">
    <section
      class="bg-opacity-80 bg-white p-6 rounded-lg shadow-lg mb-8 max-w-2xl mx-auto mt-10"
      data-aos="fade-up"
      data-aos-duration="1000"
    >
      <div class="flex flex-col lg:flex-row lg:items-start pt-2">
        <!-- Profile Picture Section -->
        <div class="lg:mr-8 mb-4 lg:mb-0 text-center lg:text-left">
          <img
            id="profile-image-preview"
            class="rounded-full w-40 h-40 mx-auto lg:mx-10 mt-20"
            src=""
            alt="Profile Preview"
          />
          <input
            type="file"
            id="profile-picture"
            accept="image/*"
            class="mt-4 bg-gray-100 px-4 py-2 text-sm text-gray-600 rounded-md cursor-pointer border-2 border-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
            onchange="previewImage(event)"
          />
        </div>

        <!-- Profile Details Section -->
        <div class="lg:flex-1">
          <!-- Name -->
          <div class="mb-4">
            <span class="text-blue-600 font-medium">Name:</span>
            <input
              type="text"
              class="w-full text-3xl font-semibold mb-2 p-3 border-2 border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
              id="name-input"
              placeholder="Enter Name"
            />
          </div>

          <!-- Phone Number -->
          <div class="mb-4">
            <span class="text-blue-600 font-medium">Phone No:</span>
            <input
              type="tel"
              class="w-full text-lg mb-2 p-3 border-2 border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
              id="phone-input"
              placeholder="Enter Phone"
            />
          </div>

          <!-- Bio -->
          <div class="mb-4">
            <span class="text-blue-600 font-medium">Bio:</span>
            <input
              type="text"
              class="w-full text-lg mb-2 p-3 border-2 border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
              id="bio-input"
              placeholder="Enter Bio"
            />
          </div>

          <!-- Skills -->
          <div class="mb-4">
            <span class="text-blue-600 font-medium">Skills:</span>
            <div class="mt-2 p-3 border-2 border-gray-300 rounded-md">
              <div id="skills-form">
                <!-- Bubbles here -->
                <div
                  id="skills-bubbles"
                  class="flex flex-wrap gap-2 mb-4"
                ></div>
                <button
                  class="bg-blue-500 text-white px-2 py-1 mt-2 rounded-lg hover:bg-blue-600"
                  onclick="displaySkillsInput()"
                >
                  Add Skill
                </button>
                <div id="custom-skills-section" class="hidden mt-4">
                  <input
                    type="text"
                    id="custom-skill"
                    placeholder="Enter skill"
                    class="w-full mb-2 p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
                  />
                  <button
                    type="button"
                    onclick="addCustomSkill()"
                    class="bg-blue-500 text-white px-4 py-2 rounded-md hover:bg-blue-600"
                  >
                    Add
                  </button>
                </div>
              </div>
            </div>
          </div>

          <!-- Subjects -->
          <div class="mb-4">
            <span class="text-blue-600 font-medium">Subjects:</span>
            <div class="mt-2 p-3 border-2 border-gray-300 rounded-md">
              <div id="subjects-form">
                <!-- Bubbles here -->
                <div
                  id="subject-bubbles"
                  class="flex flex-wrap gap-2 mb-4"
                ></div>
                <button
                  class="bg-blue-500 text-white px-2 py-1 mt-2 rounded-lg hover:bg-blue-600"
                  onclick="displaySubjectInput()"
                >
                  Add Subject
                </button>
                <div id="custom-subject-section" class="hidden mt-4">
                  <input
                    type="text"
                    id="custom-subject"
                    placeholder="Enter subject"
                    class="w-full mb-2 p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
                  />
                  <button
                    type="button"
                    onclick="addCustomSubject()"
                    class="bg-blue-500 text-white px-4 py-2 rounded-md hover:bg-blue-600"
                  >
                    Add
                  </button>
                </div>
              </div>
            </div>
          </div>

          <!-- Buttons -->
          <div class="flex mt-6">
            <button
              type="button"
              onclick="saveProfile()"
              class="bg-green-500 text-white px-6 py-2 rounded-md hover:bg-green-600 transition ease-in-out duration-200"
            >
              Save
            </button>

            <a href="/dashboard" class="ml-4">
              <button
                type="button"
                class="bg-red-500 text-white px-6 py-2 rounded-md hover:bg-red-700 transition ease-in-out duration-200"
              >
                Back
              </button>
            </a>
          </div>
        </div>
      </div>
    </section>
    <script src="scripts/profile.js"></script>
  </body>
</html>
