<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>DashBoard</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet" />
    <link rel="stylesheet" href="styles/dashboard.css" />
  </head>

  <body>
    <!-- Navigation Bar -->
    <header
      class="fixed w-full z-50 glass-card bg-white"
      data-aos="fade-down"
      data-aos-duration="1000"
    >
      <div class="container mx-auto px-6 py-3">
        <div class="flex items-center justify-between">
          <a href="/" class="flex items-center space-x-3">
            <img
              src="images/Logo-removebg-preview.png"
              alt="logo"
              class="w-12 h-12 rounded-xl"
            />
            <span
              class="text-2xl font-bold bg-clip-text text-transparent bg-gradient-to-r from-indigo-600 to-purple-600"
            >
              Study Hive
            </span>
          </a>

          <nav class="hidden md:flex items-center space-x-8">
            <a
              href="/"
              class="nav-link text-black hover:text-indigo-600 animated-font-gradient transition-colors"
              >Home</a
            >
            <a
              href="/features"
              class="nav-link text-black animated-font-gradient hover:text-indigo-600 transition-colors"
              >Features</a
            >
            <a
              href="/about"
              class="nav-link text-black animated-font-gradient hover:text-indigo-600 transition-colors"
              >About</a
            >
            <a
              href="/contact"
              class="nav-link text-black animated-font-gradient hover:text-indigo-600 transition-colors"
              >Contact</a
            >
          </nav>

          <button
            id="menuBtn"
            class="md:hidden text-gray-600 focus:outline-none"
          >
            <svg
              class="w-6 h-6"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M4 6h16M4 12h16M4 18h16"
              />
            </svg>
          </button>
        </div>

        <nav id="mobileMenu" class="hidden md:hidden mt-4 pb-4">
          <div class="flex flex-col space-y-4">
            <a
              href="/"
              class="text-black animated-font-gradient hover:text-indigo-600"
              >Home</a
            >
            <a
              href="/about"
              class="text-black animated-font-gradient hover:text-indigo-600"
              >About</a
            >
            <a
              href="/contact"
              class="text-black animated-font-gradient hover:text-indigo-600"
              >Contact</a
            >
            <a
              href="/features"
              class="text-black animated-font-gradient hover:text-indigo-600"
              >Features</a
            >
          </div>
        </nav>
      </div>
    </header>

    <div class="container px-5 pt-28 py-8 mx-auto">
      <!-- Main content wrapper with flex layout -->
      <div class="flex flex-col lg:flex-row gap-8">
        <!-- Left Side - Profile Section -->
        <div class="lg:w-1/3">
          <div class="bg-gray-100 bg-opacity-90 p-6 rounded-lg">
            <div class="flex flex-col items-center">
              <!-- Profile Picture -->
              <img
                class="w-32 h-32 rounded-full object-cover mb-4"
                id="profileImage"
                src=""
                alt="Profile"
              />

              <!-- Name -->
              <h2 class="text-2xl font-bold mb-2" id="name"></h2>

              <!-- Bio -->
              <p class="text-gray-700 text-center mb-4" id="bio"></p>

              <!-- Skills -->
              <div class="mb-4 w-full">
                <h3 class="text-xl font-semibold mb-2">Skills</h3>
                <div class="flex flex-wrap gap-2" id="skills-section"></div>
              </div>

              <!-- Subjects -->
              <div class="mb-4 w-full">
                <h3 class="text-xl font-semibold mb-2">Subjects</h3>
                <div class="flex flex-wrap gap-2" id="subjects-section"></div>
              </div>

              <!-- Edit Profile Button -->
              <a href="/profile"
                ><button
                  class="bg-indigo-500 text-white px-6 py-2 mt-5 mb-5 rounded-md hover:bg-indigo-600 transition"
                >
                  Edit Profile
                </button>
              </a>
            </div>
          </div>
        </div>

        <!-- Right Side Content -->
        <div class="lg:w-2/3 space-y-6">
          <!-- Notifications Section -->

          <!-- Study Schedule Section -->
          <div class="bg-gray-100 bg-opacity-90 p-3 rounded-lg">
            <div class="flex justify-between items-center mb-4">
              <h3 class="text-xl font-semibold">Study Schedule</h3>
            </div>
            <div class="space-y-3" id="scheduleContainer">
              <!-- Schedule content will go here -->
            </div>
          </div>

          <!-- Feature Cards Grid -->
          <div class="grid grid-cols-2 gap-4">
            <!-- Pomodoro Card -->
            <a href="/pomodoro" class="block">
              <div
                class="bg-gray-100 bg-opacity-90 pt-2 pb-2 rounded-lg text-center hover:bg-gray-200 transition"
              >
                <h4 class="font-semibold mb-2">Pomodoro</h4>
                <p class="text-sm text-gray-600">Focus Timer</p>
              </div>
            </a>

            <!-- Todo Card -->
            <a href="/todo" class="block">
              <div
                class="bg-gray-100 bg-opacity-90 pt-2 pb-2 rounded-lg text-center hover:bg-gray-200 transition"
              >
                <h4 class="font-semibold mb-2">Todo List</h4>
                <p class="text-sm text-gray-600">Task Management</p>
              </div>
            </a>

            <!-- Study Schedule Card -->
            <a href="/schedule" class="block">
              <div
                class="bg-gray-100 bg-opacity-90 pt-2 pb-2 rounded-lg text-center hover:bg-gray-200 transition"
              >
                <h4 class="font-semibold mb-2">Study Schedule</h4>
                <p class="text-sm text-gray-600">Schedule Management</p>
              </div>
            </a>
          </div>
        </div>
      </div>
    </div>
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script src="scripts/dashboard.js"></script>
  </body>
</html>
