      <!-- Study Schedule Section -->
      <section class="bg-white p-6 rounded-lg shadow-lg mb-8">
        <h3 class="text-xl font-semibold mb-4">Study Schedule</h3>
        <p class="text-gray-700">Your weekly study goals and sessions:</p>
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 mt-4">
          <div class="bg-gray-50 p-4 rounded shadow">
            <h4 class="font-semibold">Monday</h4>
            <p class="text-gray-600">Math: 2 hrs</p>
          </div>
          <div class="bg-gray-50 p-4 rounded shadow">
            <h4 class="font-semibold">Tuesday</h4>
            <p class="text-gray-600">Physics: 1 hr</p>
          </div>
          <!-- Add more days as needed -->
        </div>
      </section>

      <!-- Progress Tracker Section -->
      <section class="bg-white p-6 rounded-lg shadow-lg mb-8">
        <h3 class="text-xl font-semibold mb-4">Progress Tracker</h3>
        <p class="text-gray-700">Track your goals and progress:</p>
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 mt-4">
          <div class="bg-gray-50 p-4 rounded shadow">
            <h4 class="font-semibold">Math</h4>
            <div class="w-full bg-gray-200 rounded-full h-4 mt-2">
              <div
                class="bg-blue-500 h-4 rounded-full"
                style="width: 75%"
              ></div>
            </div>
            <p class="text-gray-600 mt-2">75% completed</p>
          </div>
          <!-- Repeat for other subjects -->
        </div>
      </section>

      <!-- Discussion Board Section -->
      <section class="bg-white p-6 rounded-lg shadow-lg mb-8">
        <h3 class="text-xl font-semibold mb-4">Discussion Board</h3>
        <textarea
          placeholder="Ask a question..."
          class="w-full p-4 border border-gray-300 rounded-lg mb-4"
        ></textarea>
        <button class="bg-blue-500 text-white px-4 py-2 rounded">
          Post Question
        </button>
      </section>

      <!-- Achievements Section -->
      <section class="bg-white p-6 rounded-lg shadow-lg mb-8">
        <h3 class="text-xl font-semibold mb-4">Achievements</h3>
        <div class="flex space-x-4">
          <div
            class="bg-yellow-200 text-yellow-800 p-2 rounded-full text-center w-24"
          >
            <p class="font-semibold">Top Contributor</p>
          </div>
          <div
            class="bg-green-200 text-green-800 p-2 rounded-full text-center w-24"
          >
            <p class="font-semibold">Math Expert</p>
          </div>
        </div>
      </section>
    </div>

