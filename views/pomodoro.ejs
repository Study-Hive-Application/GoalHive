<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
      tailwind.config = {
        theme: {
          extend: {
            animation: {
              fade: "fadeOut 0.3s ease-in-out",
            },
            keyframes: {
              fadeOut: {
                "0%": { opacity: "0" },
                "100%": { opacity: "1" },
              },
            },
          },
        },
      };
    </script>
    <title>Pomodoro Timer</title>
  </head>
  <body class="min-h-screen flex flex-col bg-gray-100">
    <!-- Navigation Bar -->
    <header
      class="bg-opacity-70 text-gray-400 bg-white body-font"
      data-aos="fade-down"
      data-aos-duration="1000"
    >
      <div
        class="container mx-50 flex flex-wrap p-3 items-center justify-between"
      >
        <!-- Logo Section -->
        <a
          href="#"
          class="flex title-font font-medium items-center text-black mb-2 md:mb-0"
        >
          <img
            src="images/Logo-removebg-preview.png"
            alt="logo"
            class="w-11 h-11"
          />
          <span class="ml-3 text-xl text-black">Study Hive</span>
        </a>

        <!-- Hamburger Icon (shown on small screens) -->
        <button
          class="md:hidden flex items-center text-black focus:outline-none ml-auto"
          onclick="toggleMenu()"
        >
          <svg
            class="w-6 h-6"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
            xmlns="http://www.w3.org/2000/svg"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16"
            ></path>
          </svg>
        </button>

        <!-- Navigation Links -->
        <nav
          id="menu"
          class="hidden md:flex md:flex-grow md:items-center justify-center md:justify-end ml-62 text-base"
        >
          <a href="index.html" class="mr-5 text-black hover:text-gray-800 pr-2"
            >Home</a
          >
          <a
            href="aboutUs.html"
            class="mr-5 text-black hover:text-gray-800 pr-2"
            >About us</a
          >
          <a
            href="contactUs.html"
            class="mr-5 text-black hover:text-gray-800 pr-2"
            >Contact us</a
          >
          <a
            href="Features.html"
            class="mr-5 text-black hover:text-gray-800 pr-2"
            >Features</a
          >
          <a href="clientPage.html">
            <button
              class="inline-flex items-center bg-gray-800 border-0 py-1 px-3 focus:outline-none hover:bg-gray-700 rounded text-base mt-4 md:mt-0 text-white"
            >
              DashBoard
              <svg
                fill="none"
                stroke="currentColor"
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                class="w-4 h-4 ml-1"
                viewBox="0 0 24 24"
              >
                <path d="M5 12h14M12 5l7 7-7 7"></path>
              </svg>
            </button>
          </a>
        </nav>
      </div>
    </header>

    <!-- Video Background -->
    <video
      autoplay
      loop
      muted
      playsinline
      class="fixed right-0 bottom-0 min-w-full min-h-full w-auto h-auto -z-10 object-cover opacity-80"
    >
      <source id="pomo_bgvid" src="images/pomo_bgvid.mp4" type="video/mp4" />
    </video>

    <!-- Timer Container -->
    <div class="flex-grow flex items-center justify-center px-4">
      <div class="text-center w-full max-w-md mx-auto">
        <!-- Mode Buttons -->
        <div
          id="mode-buttons"
          class="flex flex-col sm:flex-row justify-center gap-2 sm:gap-4 max-w-md mx-auto px-4 mb-8"
        >
          <button
            data-mode="pomodoro"
            class="w-full px-4 py-2 rounded-lg text-sm sm:text-base border-2 border-white text-white hover:bg-blue-300 hover:border-black hover:text-black transition-colors duration-300 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2"
          >
            Pomodoro
          </button>
          <button
            data-mode="short-break"
            class="w-full px-4 py-2 rounded-lg text-sm sm:text-base border-2 border-white text-white hover:bg-blue-300 hover:border-black hover:text-black transition-colors duration-300 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2"
          >
            Short Break
          </button>
          <button
            data-mode="long-break"
            class="w-full px-4 py-2 rounded-lg text-sm sm:text-base border-2 border-white text-white hover:bg-blue-300 hover:border-black hover:text-black transition-colors duration-300 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2"
          >
            Long Break
          </button>
        </div>

        <!-- Timer Display -->
        <div
          id="timer"
          class="text-9xl sm:text-9xl font-bold text-gray-800 mb-8 transition-all duration-300"
        >
          25:00
        </div>

        <!-- Control Buttons -->
        <div class="flex flex-col sm:flex-row justify-center gap-4">
          <button
            id="start-btn"
            class="px-8 py-3 border-2 border-black bg-green-600 text-white rounded-full hover:bg-green-700 transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2"
          >
            Start
          </button>
          <button
            id="reset-btn"
            class="px-8 py-3 border-2 border-black bg-red-600 text-white rounded-full hover:bg-red-700 transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2"
          >
            Reset
          </button>
        </div>
      </div>
    </div>

    <script src="scripts/pomodoro.js"></script>
  </body>
</html>
