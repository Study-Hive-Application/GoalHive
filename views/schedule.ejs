<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet" />
    <link rel="stylesheet" href="styles/schedule.css" />
  </head>

  <body>
    <!-- Header -->
    <%- include("partials/header") %>

    <div
      class="pt-28 transparent-card shadow-md rounded-lg bg-gray-100 bg-opacity-90 p-6 rounded-lg"
      data-aos="fade-left"
      data-aos-duration="1000"
    >
      <h1
        class="pb-10 text-4xl md:text-5xl font-bold bg-clip-text text-transparent bg-gradient-to-r from-gray-600 via-gray-800 to-gray-900"
        data-aos="fade-down"
      >
        Study Schedule:
      </h1>

      <!-- Study Schedule Days -->
      <div class="space-y-3" id="scheduleContainer">
        <!-- Static Day Elements: These will be filled with subjects via JS -->
        <div
          id="sunday"
          class="day-schedule flex justify-between items-center bg-white p-3 rounded-lg"
        >
          <span class="font-medium">Sunday</span>
          <div class="subjects"></div>
          <button class="edit-day">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-5 w-5"
              viewBox="0 0 20 20"
              fill="currentColor"
            >
              <path
                d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z"
              />
            </svg>
          </button>
        </div>
        <div
          id="monday"
          class="day-schedule flex justify-between items-center bg-white p-3 rounded-lg"
        >
          <span class="font-medium">Monday</span>
          <div class="subjects"></div>
          <button class="edit-day">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-5 w-5"
              viewBox="0 0 20 20"
              fill="currentColor"
            >
              <path
                d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z"
              />
            </svg>
          </button>
        </div>
        <div
          id="tuesday"
          class="day-schedule flex justify-between items-center bg-white p-3 rounded-lg"
        >
          <span class="font-medium">Tuesday</span>
          <div class="subjects"></div>
          <button class="edit-day">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-5 w-5"
              viewBox="0 0 20 20"
              fill="currentColor"
            >
              <path
                d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z"
              />
            </svg>
          </button>
        </div>
        <div
          id="wednesday"
          class="day-schedule flex justify-between items-center bg-white p-3 rounded-lg"
        >
          <span class="font-medium">Wednesday</span>
          <div class="subjects"></div>
          <button class="edit-day">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-5 w-5"
              viewBox="0 0 20 20"
              fill="currentColor"
            >
              <path
                d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z"
              />
            </svg>
          </button>
        </div>
        <div
          id="thursday"
          class="day-schedule flex justify-between items-center bg-white p-3 rounded-lg"
        >
          <span class="font-medium">Thursday</span>
          <div class="subjects"></div>
          <button class="edit-day">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-5 w-5"
              viewBox="0 0 20 20"
              fill="currentColor"
            >
              <path
                d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z"
              />
            </svg>
          </button>
        </div>
        <div
          id="friday"
          class="day-schedule flex justify-between items-center bg-white p-3 rounded-lg"
        >
          <span class="font-medium">Friday</span>
          <div class="subjects"></div>
          <button class="edit-day">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-5 w-5"
              viewBox="0 0 20 20"
              fill="currentColor"
            >
              <path
                d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z"
              />
            </svg>
          </button>
        </div>
        <div
          id="saturday"
          class="day-schedule flex justify-between items-center bg-white p-3 rounded-lg"
        >
          <span class="font-medium">Saturday</span>
          <div class="subjects"></div>
          <button class="edit-day">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-5 w-5"
              viewBox="0 0 20 20"
              fill="currentColor"
            >
              <path
                d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z"
              />
            </svg>
          </button>
        </div>
      </div>
    </div>

    <!-- Edit Subject Modal remains the same -->
    <div
      id="scheduleModal"
      class="hidden fixed inset-0 bg-black bg-opacity-50 z-50 flex items-center justify-center"
    >
      <div class="bg-white p-6 rounded-lg w-96">
        <h4 id="modalTitle" class="text-xl font-semibold mb-4">
          Edit Schedule
        </h4>
        <input
          type="text"
          id="subjectInput"
          class="w-full border p-2 rounded mb-4"
          placeholder="Enter subject"
        />
        <div class="flex justify-end space-x-2">
          <button id="cancelModal" class="bg-gray-200 px-4 py-2 rounded">
            Cancel
          </button>
          <button
            id="saveSubject"
            class="bg-indigo-500 text-white px-4 py-2 rounded"
          >
            Save
          </button>
        </div>
      </div>
    </div>
  </body>
  <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
  <script src="scripts/schedule.js"></script>
</html>
