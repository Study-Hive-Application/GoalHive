<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Todo List Application</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css"
    />
    <link rel="stylesheet" href="styles/todo.css" />
  </head>

  <body class="bg-gray-100">
    <div>
      <header
        class="text-gray-400 transparent-navbar body-font"
        data-aos="fade-down"
        data-aos-duration="1000"
      >
        <div
          class="container mx-50 flex flex-wrap p-3 items-center justify-between"
        >
          <!-- Logo Section -->
          <a
            href="/"
            class="flex title-font font-medium items-center text-black mb-2 md:mb-0"
          >
            <img
              src="images/Logo-removebg-preview.png"
              alt="logo"
              class="w-11 h-11"
            />
            <span class="ml-3 text-xl text-black">Study Hive</span>
          </a>

          <!-- Hamburger Icon (shown on small screens) -->
          <button
            class="md:hidden flex items-center text-black focus:outline-none ml-auto"
            onclick="toggleMenu()"
          >
            <svg
              class="w-6 h-6"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
              xmlns="http://www.w3.org/2000/svg"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M4 6h16M4 12h16M4 18h16"
              ></path>
            </svg>
          </button>

          <!-- Navigation Links -->
          <nav
            id="menu"
            class="hidden md:flex md:flex-grow md:items-center justify-center md:justify-end ml-62 text-base"
          >
            <a href="/" class="mr-5 text-black hover:text-gray-800 pr-2"
              >Home</a
            >
            <a href="/about" class="mr-5 text-black hover:text-gray-800 pr-2"
              >About us</a
            >
            <a href="/contact" class="mr-5 text-black hover:text-gray-800 pr-2"
              >Contact us</a
            >
            <a href="/features" class="mr-5 text-black hover:text-gray-800 pr-2"
              >Features</a
            >
            <a href="/account">
              <button
                class="inline-flex items-center bg-gray-800 border-0 py-1 px-3 focus:outline-none hover:bg-gray-700 rounded text-base mt-4 md:mt-0 text-white"
              >
                SignUp/Login
                <svg
                  fill="none"
                  stroke="currentColor"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  class="w-4 h-4 ml-1"
                  viewBox="0 0 24 24"
                >
                  <path d="M5 12h14M12 5l7 7-7 7"></path>
                </svg>
              </button>
            </a>
            <a href="clientPage.html" class="hidden">
              <button
                class="inline-flex items-center bg-gray-800 border-0 py-1 px-3 focus:outline-none hover:bg-gray-700 rounded text-base mt-4 md:mt-0 text-white"
              >
                DashBoard
                <svg
                  fill="none"
                  stroke="currentColor"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  class="w-4 h-4 ml-1"
                  viewBox="0 0 24 24"
                >
                  <path d="M5 12h14M12 5l7 7-7 7"></path>
                </svg>
              </button>
            </a>
          </nav>
        </div>
      </header>
    </div>

    <!-- Main Container -->
    <div class="container mx-auto mt-8 p-4">
      <!-- Three Sections Container -->
      <div class="grid grid-cols-3 gap-6">
        <!-- Tasks Section -->
        <div
          class="transparent-card shadow-md rounded-lg p-4"
          data-aos="zoom-in"
        >
          <h2 class="text-xl font-semibold mb-4 border-b pb-2">Tasks</h2>
          <div id="taskList" class="space-y-2">
            <!-- Tasks will be dynamically added here -->
          </div>
        </div>

        <!-- Create Task Section -->
        <div
          class="transparent-card shadow-md rounded-lg p-4"
          data-aos="zoom-in"
          data-aos-duration="1000"
        >
          <h2 class="text-xl font-semibold mb-4 border-b pb-2">Create Task</h2>
          <div class="space-y-4">
            <input
              type="text"
              id="taskInput"
              placeholder="Enter task description"
              class="w-full p-2 border rounded focus:outline-blue-500 bg-white/70"
            />
            <input
              type="date"
              id="taskDate"
              class="w-full p-2 border rounded focus:outline-blue-500 bg-white/70"
            />
            <button
              id="addTaskBtn"
              class="w-full bg-blue-500 text-white p-2 rounded hover:bg-blue-600 transition"
            >
              Add Task
            </button>
          </div>
        </div>

        <!-- Reminders Section -->
        <div
          class="transparent-card shadow-md rounded-lg p-4"
          data-aos="zoom-in"
          data-aos-duration="2000"
        >
          <h2 class="text-xl font-semibold mb-4 border-b pb-2">Reminders</h2>
          <div id="reminderList" class="space-y-2">
            <!-- Reminders will be dynamically added here -->
          </div>
        </div>
      </div>

      <!-- Completed Tasks Section (Full Width) -->
      <div
        class="transparent-card shadow-md rounded-lg p-4 mt-6"
        data-aos="zoom-in"
        data-aos-duration="2000"
      >
        <h2 class="text-xl font-semibold mb-4 border-b pb-2">
          Completed Tasks
        </h2>
        <div id="completedTaskList" class="space-y-2">
          <!-- Completed tasks will be dynamically added here -->
        </div>
      </div>
    </div>

    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script src="scripts/todo.js"></script>
  </body>
</html>
